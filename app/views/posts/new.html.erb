<h1>In posts/new</h1>
<%= form_for @post do |f| %>
	<%= f.label :title %><br />
	<%= f.text_field :title %> <br />


	<%= f.label :body %><br />
	<%= f.text_area :body %> <br />
	
	<%= f.select :category_id, Category.all.collect { |x| [x.name, x.id]}, {:include_blank => "select a category"} %> <br />
	<%= f.submit "Add Post" %>
<% end %>
